{
	"$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
	"files": {
		"includes": [
			"./plugins/**/*",
			"./libraries/**/*",
			"./shared/**/*"
		]
	},
	"overrides": [
		{
			"includes": ["**/*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"	
					}
				}
			}
		}
	],
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": "off",
			"correctness": {
				"noConstructorReturn": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useTemplate": "off"
			},
			"complexity": {
				"noArguments": "off",
				"noBannedTypes": "off",
				"noStaticOnlyClass": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off",
				"useIterableCallbackReturn": "off",
				"noAssignInExpressions": "off",
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": false
	},
	"assist": {
		"enabled": false
	}
}