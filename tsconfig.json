{
    "compilerOptions": {
        "strict": true,
        "target": "esnext",
        "module": "es2022",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "skipLibCheck": true,
        "moduleDetection": "force",
        "baseUrl": ".",
        "paths": {
            "$assets/*": ["./assets/*"],
            "$shared/*": ["./shared/*"]
        }
    },
    "include": [
        "./plugins/**/*.ts",
        "./libraries/**/*.ts",
        "./shared/**/*.ts",
        "./main.d.ts"
    ]
}